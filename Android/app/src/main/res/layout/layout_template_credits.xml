<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/memeImageParentBg">

    <TextView
        android:id="@+id/templateCreditsDummy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/headerStartIconMargin"
        android:text="@string/template_credits_colon"
        android:textSize="@dimen/creditsTitleTextSize"
        app:layout_constraintEnd_toStartOf="@id/templateCreditsDummy2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/templateCreditsDummy2"
        app:layout_constraintBottom_toBottomOf="@id/templateCreditsDummy2"
         />

    <ImageView
        android:id="@+id/templateCreditsDummy2"
        android:layout_width="@dimen/iconsSize"
        android:layout_height="@dimen/iconsSize"
        android:layout_marginLeft="@dimen/itemSpaceM"
        android:src="@drawable/ic_insta"
        app:layout_constraintEnd_toStartOf="@id/templateCreditsUsernameTv"
        app:layout_constraintStart_toEndOf="@id/templateCreditsDummy1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/templateCreditsUsernameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/itemSpaceM"
        android:textColor="@color/roundedRectangle3"
        app:layout_constraintBottom_toBottomOf="@id/templateCreditsDummy2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/templateCreditsDummy2"
        app:layout_constraintTop_toTopOf="@id/templateCreditsDummy2"
        android:background="?attr/selectableItemBackground"
        />

</androidx.constraintlayout.widget.ConstraintLayout>