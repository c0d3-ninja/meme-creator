<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/uploadTemplatePreviewHeight"
    android:layout_height="@dimen/uploadTemplatePreviewHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/uploadTemplatePreviewImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uploadTemplatePreviewDummy1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/uploadTemplatePreviewImage"
        app:layout_constraintEnd_toEndOf="@id/uploadTemplatePreviewImage"
        app:layout_constraintBottom_toBottomOf="@id/uploadTemplatePreviewImage"
        android:background="@color/freezeLayer"
        >
        <Button
            android:id="@+id/uploadTemplatePreviewDelete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/delete"
            app:layout_constraintStart_toStartOf="@id/uploadTemplatePreviewDummy1"
            app:layout_constraintEnd_toEndOf="@id/uploadTemplatePreviewDummy1"
            app:layout_constraintTop_toTopOf="@id/uploadTemplatePreviewDummy1"
            app:layout_constraintBottom_toBottomOf="@id/uploadTemplatePreviewDummy1"
            style="@style/Button.StateLessBorderLess"
            android:layout_margin="@dimen/headerStartIconMargin"
            android:drawableStart="@drawable/ic_delete_white_24dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>